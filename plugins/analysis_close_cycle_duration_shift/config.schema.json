{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Close Cycle Duration Shift Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "process_column": { "type": ["string", "null"] },
    "timestamp_column": { "type": ["string", "null"] },
    "start_column": { "type": ["string", "null"] },
    "end_column": { "type": ["string", "null"] },
    "duration_column": { "type": ["string", "null"] },
    "server_column": { "type": ["string", "null"] },
    "close_cycle_mode": { "type": "string", "enum": ["infer", "fixed"] },
    "close_cycle_window_days": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "baseline_close_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "baseline_close_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "target_close_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "exclude_processes": { "type": "array", "items": { "type": "string" } },
    "min_close_count": { "type": "integer", "minimum": 1 },
    "min_open_count": { "type": "integer", "minimum": 1 },
    "min_days": { "type": "integer", "minimum": 1 },
    "min_slowdown_ratio": { "type": "number", "minimum": 1 },
    "min_effect_seconds": { "type": "number", "minimum": 0 },
    "max_samples": { "type": "integer", "minimum": 100 },
    "permutations": { "type": "integer", "minimum": 0 },
    "p_value_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
    "max_examples": { "type": "integer", "minimum": 1 }
  }
}
