{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Close Cycle Uplift Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "process_column": { "type": ["string", "null"] },
    "timestamp_column": { "type": ["string", "null"] },
    "start_column": { "type": ["string", "null"] },
    "end_column": { "type": ["string", "null"] },
    "duration_column": { "type": ["string", "null"] },
    "server_column": { "type": ["string", "null"] },
    "param_column": { "type": ["string", "null"] },
    "close_cycle_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "min_close_count": { "type": "integer", "minimum": 0 },
    "min_days": { "type": "integer", "minimum": 1 },
    "min_share_delta": { "type": "number", "minimum": 0, "maximum": 1 },
    "min_slowdown_ratio": { "type": "number", "minimum": 1 },
    "p_value_threshold": { "type": "number", "minimum": 0, "maximum": 1 },
    "max_examples": { "type": "integer", "minimum": 1 },
    "min_open_count": { "type": "integer", "minimum": 0 },
    "min_open_days": { "type": "integer", "minimum": 0 },
    "min_open_share": { "type": "number", "minimum": 0, "maximum": 1 },
    "min_open_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
    "suppress_processes": {
      "type": ["array", "string", "null"],
      "items": { "type": "string" }
    },
    "suppress_process_regex": { "type": ["string", "null"] }
  }
}
