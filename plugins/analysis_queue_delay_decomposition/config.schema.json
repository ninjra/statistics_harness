{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "process_column": { "type": ["string", "null"] },
    "queue_column": { "type": ["string", "null"] },
    "eligible_column": { "type": ["string", "null"] },
    "start_column": { "type": ["string", "null"] },
    "end_column": { "type": ["string", "null"] },
    "dependency_columns": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "close_cycle_mode": {
      "type": "string",
      "enum": ["infer", "fixed"]
    },
    "close_cycle_window_days": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "wait_threshold_seconds": { "type": "number", "minimum": 0 },
    "min_total_hours": { "type": "number", "minimum": 0 },
    "max_process_findings": { "type": "integer", "minimum": 1 },
    "target_process": { "type": ["string", "null"] },
    "exclude_processes": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "capacity_scale_factor": { "type": "number", "minimum": 0 },
    "max_examples": { "type": "integer", "minimum": 1 }
  },
  "additionalProperties": true
}
