{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Close Cycle Capacity Model Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "process_column": { "type": ["string", "null"] },
    "host_column": { "type": ["string", "null"] },
    "start_column": { "type": ["string", "null"] },
    "end_column": { "type": ["string", "null"] },
    "queue_column": { "type": ["string", "null"] },
    "eligible_column": { "type": ["string", "null"] },
    "close_window_mode": { "type": "string", "enum": ["infer", "override", "infer_or_default", "calendar"] },
    "close_cycle_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "close_cycle_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "baseline_close_start_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "baseline_close_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "target_close_end_day": { "type": "integer", "minimum": 1, "maximum": 31 },
    "exclude_processes": { "type": "array", "items": { "type": "string" } },
    "min_close_days": { "type": "integer", "minimum": 1 },
    "max_close_days": { "type": "integer", "minimum": 1 },
    "lookahead_days": { "type": "integer", "minimum": 0 },
    "min_close_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "min_close_data_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
    "allow_calendar_fallback_modeling": { "type": "boolean" },
    "bucket_size": { "type": "string", "enum": ["day", "hour"] },
    "min_bucket_rows": { "type": "integer", "minimum": 0 },
    "min_buckets_per_group": { "type": "integer", "minimum": 1 },
    "min_months": { "type": "integer", "minimum": 1 },
    "baseline_host_count": { "type": ["integer", "null"], "minimum": 1 },
    "added_hosts": { "type": "integer", "minimum": 1 },
    "baseline_match_mode": { "type": "string", "enum": ["exact", "at_most"] },
    "target_reduction": { "type": "number", "minimum": 0, "maximum": 1 },
    "tolerance": { "type": "number", "minimum": 0, "maximum": 1 },
    "max_examples": { "type": "integer", "minimum": 1 }
  }
}
