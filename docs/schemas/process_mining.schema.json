{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Process Mining Artifact Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "plugin_id",
    "generated_at",
    "nodes",
    "edges"
  ],
  "properties": {
    "schema_version": {
      "const": "process_mining.v1"
    },
    "plugin_id": {
      "type": "string"
    },
    "generated_at": {
      "type": "string"
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "activity",
          "count"
        ],
        "properties": {
          "activity": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "source",
          "target",
          "count"
        ],
        "properties": {
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "count": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
