{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ideaspace Baseline (Signed)",
  "type": "object",
  "additionalProperties": false,
  "required": ["baseline_id", "version", "created_at", "schema_hash", "ideal_vector", "signature"],
  "properties": {
    "baseline_id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "schema_hash": { "type": "string", "minLength": 32 },
    "ideal_vector": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "notes": { "type": "string" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["algo", "digest"],
      "properties": {
        "algo": { "const": "sha256" },
        "digest": { "type": "string", "minLength": 32 },
        "signed_by": { "type": "string" }
      }
    }
  }
}

