{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Repo Improvements Catalog Raw Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "generated_utc",
    "total_items",
    "catalog"
  ],
  "properties": {
    "generated_utc": {
      "type": "string"
    },
    "total_items": {
      "type": "integer",
      "minimum": 0
    },
    "catalog": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "category",
          "description",
          "proposed_plugins",
          "repo_touchpoints",
          "implementation_steps",
          "acceptance_criteria",
          "dependencies",
          "four_pillars_expected_impact",
          "deterministic",
          "sandbox_compliant",
          "created_utc"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "proposed_plugins": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "repo_touchpoints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "implementation_steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "four_pillars_expected_impact": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "performant",
              "accurate",
              "secure",
              "citable"
            ],
            "properties": {
              "performant": {
                "type": "number"
              },
              "accurate": {
                "type": "number"
              },
              "secure": {
                "type": "number"
              },
              "citable": {
                "type": "number"
              }
            }
          },
          "deterministic": {
            "type": "boolean"
          },
          "sandbox_compliant": {
            "type": "boolean"
          },
          "created_utc": {
            "type": "string"
          }
        }
      }
    }
  }
}
