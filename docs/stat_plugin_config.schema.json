{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Stat Plugin Common Config",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "seed": {"type": "integer"},
    "time_budget_ms": {"type": "integer"},
    "max_rows": {"type": "integer"},
    "max_cols": {"type": "integer"},
    "max_groups": {"type": "integer"},
    "max_findings": {"type": "integer"},
    "time_column": {"type": ["string", "null"]},
    "group_by": {"type": ["string", "array", "null"]},
    "value_columns": {"type": ["string", "array", "null"]},
    "focus": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "mode": {"type": "string"},
        "windows": {"type": "array"},
        "include_full_scan": {"type": "boolean"}
      }
    },
    "privacy": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enable_redaction": {"type": "boolean"},
        "redact_patterns": {"type": "array", "items": {"type": "string"}},
        "max_exemplars": {"type": "integer"},
        "allow_exemplar_snippets": {"type": "boolean"}
      }
    },
    "verbosity": {"type": "string"}
  }
}
